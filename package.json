{
  "name": "clawz-lab",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "next build --turbopack",
    "start": "next start",
    "typecheck": "tsc --noEmit",
    "lint": "eslint .",
    "format": "prettier --write .",
    "test": "vitest run",
    "test:watch": "vitest",
    "e2e": "playwright test",
    "e2e:headful": "playwright test --headed",
    "dup": "jscpd --pattern 'src/**/*.ts' --pattern 'src/**/*.tsx' --threshold 3 --reporters console",
    "prepare": "husky install",
    "db:types": "supabase gen types typescript --local > src/types/supabase.ts",
    "db:reset": "supabase db reset --force && npm run db:types"
  },
  "dependencies": {
    "@hookform/resolvers": "^3.9.0",
    "@supabase/ssr": "^0.5.0",
    "@tanstack/react-query": "^5.62.7",
    "clsx": "^2.1.1",
    "framer-motion": "^11.15.0",
    "lucide-react": "^0.471.0",
    "next": "15.5.4",
    "next-intl": "^3.26.5",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "react-hook-form": "^7.53.0",
    "recharts": "^2.13.3",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.2.2",
    "@commitlint/config-conventional": "^19.2.2",
    "@eslint/eslintrc": "^3",
    "@playwright/test": "^1.48.2",
    "@tailwindcss/postcss": "^4",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.0.1",
    "@testing-library/user-event": "^14.5.2",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@typescript-eslint/eslint-plugin": "^8.10.0",
    "@typescript-eslint/parser": "^8.10.0",
    "eslint": "^9",
    "eslint-config-next": "15.5.4",
    "eslint-plugin-react": "^7.37.2",
    "eslint-plugin-react-hooks": "^5.1.0",
    "eslint-plugin-sonarjs": "^2.0.3",
    "husky": "^9.0.10",
    "jscpd": "^4.0.5",
    "jsdom": "^27.0.0",
    "prettier": "^3.3.3",
    "supabase": "^2.45.5",
    "tailwind-merge": "^2.5.3",
    "tailwindcss": "^4",
    "typescript": "^5",
    "vitest": "^3.2.4"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "prettier --write",
      "eslint --max-warnings=0 --no-warn-ignored",
      "jscpd --blame"
    ],
    "*.{md,json}": [
      "prettier --write"
    ]
  }
}
